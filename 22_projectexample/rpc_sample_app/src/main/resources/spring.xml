<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    <!--加载properties配置文件-->
    <context:property-placeholder location="classpath:prj.properties"/>
    <!--使用指定的构造器初始化指定bean-->
    <context:component-scan base-package="com.liu.sample.app"/>
    <bean id="ServiceDiscovery" class="com.liu.registry.ServiceDiscovery">
        <constructor-arg name="zookeeperAddress" value="${zookeeper.address}"/>
    </bean>

    <bean id="RpcProxy" class="com.liu.client.RpcProxy">
        <constructor-arg name="serviceDiscovery" index="0" ref="ServiceDiscovery"/>
    </bean>
</beans>